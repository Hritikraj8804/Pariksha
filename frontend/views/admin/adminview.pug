extend layout

block content
  .dashboard-container
    .dashboard-header
      h1#dashboard-user-name #{user.name} Dashboard

    .dashboard-grid
      .dashboard-card
        h2.card-title User Management
        .card-content
          ul.user-management-list#user-list
            each student in students
              li
                strong #{student.name} (Student)
                //- a.btn.btn-small(href="/admin/users/edit/#{student._id}") Edit
            each teacher in teachers
              li
                strong #{teacher.name} (Teacher)
                //- a.btn.btn-small(href="/admin/users/edit/#{teacher._id}") Edit
          p.card-actions
            a(href="/admin/manage-users") View All Users

      .dashboard-card
        h2.card-title Exam Management
        .card-content
          ul.exam-list
            each exam in exams
              li
                strong #{exam.title}
                //- a.btn.btn-small(href="/admin/exams/edit/#{exam.examId}") Edit
          p.card-actions
            a(href="/admin/manage-exams") View All Exams

      .dashboard-card
        h2.card-title Exam Analytics
        .card-content
          p Total Users: #{totalUsers}
          p Total Exams Created: #{totalExams}
          p Total Submissions: #{totalSubmissions}
          p.card-actions
            a(href="/admin/analytics") View Detailed Analytics

