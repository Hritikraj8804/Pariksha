block style
  style.
    /* Specific styles for the admin dashboard */
    .dashboard-container {
      max-width: 1200px;
      margin: 80px auto;
      padding: 20px;
    }

    .dashboard-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 1px solid #eee;
    }

    .dashboard-header h1 {
      font-size: 2rem;
      color: var(--dark-color);
    }

    .dashboard-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
    }

    .dashboard-card {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
      padding: 20px;
      transition: transform 0.3s ease;
      border: 1px solid #eee;
    }

    .dashboard-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    }

    .card-title {
      font-size: 1.3rem;
      color: var(--dark-color);
      margin-bottom: 10px;
    }

    .card-content p {
      color: var(--text-light);
      margin-bottom: 15px;
    }

    .card-content ul {
      list-style: none;
      padding: 0;
    }

    .card-content ul li {
      padding: 8px 0;
      border-bottom: 1px solid #eee;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .card-content ul li:last-child {
      border-bottom: none;
    }

    .card-content ul li strong {
      color: var(--dark-color);
    }

    .card-content ul li span {
      color: var(--text-light);
      margin-left: 10px;
      font-size: 0.9rem;
    }

    .card-actions a {
      display: inline-block;
      padding: 8px 15px;
      border-radius: 5px;
      text-decoration: none;
      color: var(--primary-color);
      border: 1px solid var(--primary-color);
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    .card-actions a:hover {
      background-color: var(--primary-color);
      color: white;
    }

    .user-management-list li strong {
      margin-right: 10px;
    }