extends layout

block content
    .leaderboard-container
        .leaderboard-header
            h1 Leaderboard for #{user.name}

        table.leaderboard-table
            thead
                tr
                    th Rank
                    th Name
                    th Total Score
                    th Tests Taken
            tbody#leaderboard-body
                if leaderboard && leaderboard.length > 0
                    each entry, index in leaderboard
                        tr
                            td #{index + 1}
                            td #{entry.studentId.name}
                            td #{entry.totalScore}
                            td #{entry.totalTests}
                else
                    tr.no-data
                        td(colspan="4") No leaderboard data available.

    style.
        /* Specific styles for the leaderboard */
        .leaderboard-container {
            max-width: 800px;
            margin: 30px auto; /* Increased top margin */
            padding: 30px; /* Increased padding */
            background-color: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            border: 1px solid #e0e0e0;
        }

        .leaderboard-header {
            text-align: center;
            margin-bottom: 40px; /* Increased bottom margin */
            padding-bottom: 25px; /* Increased bottom padding */
            border-bottom: 2px solid var(--primary-color);
        }

        .leaderboard-header h1 {
            color: var(--dark-color);
            font-size: 2.5rem; /* Increased font size */
            margin-bottom: 15px; /* Increased bottom margin */
            font-weight: 600;
        }

        .leaderboard-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 25px; /* Increased top margin */
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08); /* Subtle shadow on table */
            border-radius: var(--border-radius);
            overflow: hidden; /* To contain the border-radius of thead and tbody */
        }

        .leaderboard-table th,
        .leaderboard-table td {
            padding: 15px 20px; /* Increased padding */
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .leaderboard-table th {
            background-color: var(--light-gray);
            color: var(--dark-color);
            font-weight: bold;
            font-size: 1.1rem; /* Slightly larger font */
        }

        .leaderboard-table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .leaderboard-table tbody tr:hover {
            background-color: #f0f0f0;
            transition: background-color 0.2s ease-in-out;
        }

        .leaderboard-table td:first-child {
            font-weight: bold;
            color: var(--primary-color);
        }

        .no-data {
            text-align: center;
            padding: 30px; /* Increased padding */
            color: var(--text-light);
            font-size: 1.1rem;
        }

        /* Optional: Add some visual enhancements for top ranks */
        .leaderboard-table tbody tr:first-child td {
            color: gold;
            font-weight: 700;
        }

        .leaderboard-table tbody tr:nth-child(2) td {
            color: silver;
            font-weight: 700;
        }

        .leaderboard-table tbody tr:nth-child(3) td {
            color: #cd7f32; /* Bronze color */
            font-weight: 700;
        }