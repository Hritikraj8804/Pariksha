extends layout

block content
    .view-results-container
        h1.view-results-header View Exam Results
        .results-filter
            label(for="exam") Select Exam:
            select(id="exam", name="exam")
                option(value="") All Exams
                if results && results.length > 0
                    - const uniqueExamTitles = [...new Set(results.map(r => r.exam.title))];
                    each examTitle in uniqueExamTitles
                        option(value=examTitle) #{examTitle}
            button(onclick="filterResults()") Filter

        if errorMessage
            p.error-message #{errorMessage}
        else if results && results.length > 0
            table.results-table
                thead
                    tr
                        th Student ID
                        th Student Name
                        th Exam Title
                        th Score
                        th Percentage
                        th Difficulty
                        th Status
                        //- th Total Marks // Assuming this is not directly in StudentScore
                        th Date Taken
                        th Course
                tbody
                    each result in results
                        tr
                            td #{result.studentId}
                            td #{result.name}
                            td #{result.title}
                            td #{result.score !== undefined ? result.score : 'N/A'}
                            td #{result.percentage !== undefined ? result.percentage.toFixed(2) + '%' : 'N/A'}
                            td #{result.difficulty !== undefined ? result.difficulty : 'N/A'}
                            td
                                if result.passed === true
                                    span.pass-text Passed
                                else if result.passed === false
                                    span.fail-text Failed
                                else
                                    span N/A
                            //- td N/A // You might need to calculate or fetch total marks separately
                            
                            td #{result.submissionTime ? new Date(result.submissionTime).toLocaleDateString() : 'N/A'}
                            td #{result.course}
        else
            p No results available.

block styles
    style.
        /* ... your existing styles ... */
      .view-results-container {
        max-width: 960px;
        margin: 30px auto;
        padding: 20px;
        background-color: var(--white);
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .view-results-header h1 {
        font-size: 2.2rem;
        margin-bottom: 20px;
        color: var(--dark-color);
        border-bottom: 2px solid var(--primary-color);
        padding-bottom: 10px;
      }

      .results-filter {
        margin-bottom: 20px;
        display: flex;
        align-items: center;
      }

      .results-filter label {
        margin-right: 10px;
        font-weight: bold;
        color: var(--dark-color);
      }

      .results-filter select {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
        margin-right: 10px;
      }

      .results-filter button {
        background-color: var(--primary-color);
        color: var(--white);
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s ease;
      }

      .results-filter button:hover {
        background-color: #218838;
      }

      .results-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      .results-table th,
      .results-table td {
        padding: 12px 15px;
        border-bottom: 1px solid #eee;
        text-align: left;
      }

      .results-table th {
        background-color: #f8f8f8;
        font-weight: bold;
        color: var(--dark-color);
      }

      .results-table tbody tr:hover {
        background-color: #f5f5f5;
      }

      .results-table td.actions a {
        display: inline-block;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        color: var(--primary-color);
        border: 1px solid var(--primary-color);
        transition: background-color 0.3s ease, color 0.3s ease;
      }

      .results-table td.actions a:hover {
        background-color: var(--primary-color);
        color: var(--white);
      }

      .pass-text {
          color: green;
          font-weight: bold;
      }

      .fail-text {
          color: red;
          font-weight: bold;
      }