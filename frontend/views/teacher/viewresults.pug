extends layout

block content
  .view-results-container
    h1.view-results-header View Exam Results
    .results-filter
      label(for="exam") Select Exam:
      select(id="exam", name="exam")
        option(value="") All Exams
        option(value="mathematics-101-exam") Mathematics 101 Exam
        option(value="science-fundamentals-exam") Science Fundamentals Exam
        // Add more exams dynamically
      button Filter

    if results && results.length > 0
      table.results-table
        thead
          tr
            th Student Name
            th Exam Title
            th Score
            th Total Marks
            th Date Taken
            th Actions
        tbody
          each result in results
            tr
              td #{result.studentName}
              td #{result.examTitle}
              td #{result.score}
              td #{result.totalMarks}
              td #{new Date(result.dateTaken).toLocaleDateString()}
              td.actions
                a(href="/teacher/results/#{result.id}/details").button Details

    else
      p No results available for the selected criteria.

block styles
  style.
    .view-results-container {
      max-width: 960px;
      margin: 30px auto;
      padding: 20px;
      background-color: var(--white);
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .view-results-header h1 {
      font-size: 2.2rem;
      margin-bottom: 20px;
      color: var(--dark-color);
      border-bottom: 2px solid var(--primary-color);
      padding-bottom: 10px;
    }

    .results-filter {
      margin-bottom: 20px;
      display: flex;
      align-items: center;
    }

    .results-filter label {
      margin-right: 10px;
      font-weight: bold;
      color: var(--dark-color);
    }

    .results-filter select {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 1rem;
      margin-right: 10px;
    }

    .results-filter button {
      background-color: var(--primary-color);
      color: var(--white);
      padding: 10px 15px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1rem;
      transition: background-color 0.3s ease;
    }

    .results-filter button:hover {
      background-color: var(--primary-dark-color);
    }

    .results-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    .results-table th,
    .results-table td {
      padding: 12px 15px;
      border-bottom: 1px solid #eee;
      text-align: left;
    }

    .results-table th {
      background-color: #f8f8f8;
      font-weight: bold;
      color: var(--dark-color);
    }

    .results-table tbody tr:hover {
      background-color: #f5f5f5;
    }

    .results-table td.actions a {
      display: inline-block;
      padding: 8px 15px;
      border-radius: 5px;
      text-decoration: none;
      color: var(--primary-color);
      border: 1px solid var(--primary-color);
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    .results-table td.actions a:hover {
      background-color: var(--primary-color);
      color: var(--white);
    }