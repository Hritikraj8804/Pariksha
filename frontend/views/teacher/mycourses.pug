extends layout

block content
  .courses-container
    h1.courses-header My Courses
    .course-list
      .course-card
        .course-info
          h2.course-title Mathematics 101
          p.course-description Introduction to fundamental mathematical concepts.
        .course-actions
          a(href="/teacher/courses/mathematics-101") View Details
          a(href="/teacher/exams/create?course=mathematics-101") Create Exam

      .course-card
        .course-info
          h2.course-title Science Fundamentals
          p.course-description Exploring basic principles of biology, chemistry, and physics.
        .course-actions
          a(href="/teacher/courses/science-fundamentals") View Details
          a(href="/teacher/exams/create?course=science-fundamentals") Create Exam

block styles
  style.
    /* Specific styles for the My Courses page */
    .courses-container {
      max-width: 960px;
      margin: 30px auto;
      padding: 20px;
    }

    .courses-header h1 {
      font-size: 2.2rem;
      margin-bottom: 20px;
      color: var(--dark-color);
      border-bottom: 2px solid var(--primary-color);
      padding-bottom: 10px;
    }

    .course-card {
      background-color: var(--white);
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      padding: 20px;
      margin-bottom: 15px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .course-info {
      flex-grow: 1;
    }

    .course-title {
      font-size: 1.5rem;
      color: var(--dark-color);
      margin-bottom: 5px;
    }

    .course-description {
      color: var(--text-light);
      margin-bottom:  10px;
      font-size: 1rem;
    }